{
  "name": "@allthings/elements",
  "version": "5.0.0-beta.63",
  "main": "dist/index.js",
  "module": "dist/es/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/allthings/elements",
  "author": "Moritz Schw√∂rer <moritz.schwoerer@allthings.me>",
  "license": "MIT",
  "dependencies": {
    "@allthings/colors": "4.0.1",
    "core-js": "3.4.8",
    "downshift": "3.4.7",
    "glamor": "2.20.40",
    "json2mq": "0.2.0",
    "kewler": "1.0.8",
    "match-sorter": "4.0.2",
    "mitt": "1.2.0",
    "neue": "1.0.0",
    "react-calendar": "2.19.2",
    "react-media": "1.10.0",
    "react-motion": "0.5.2"
  },
  "resolutions": {
    "jest/**/handlebars": ">=4.5.3",
    "marked": ">=0.6.2"
  },
  "peerDependencies": {
    "react": "^16.8",
    "react-dom": "^16.8"
  },
  "scripts": {
    "preversion": "yarn lint && yarn test",
    "prebuild": "rimraf dist",
    "build:es": "tsc -p tsconfig.json --target ESNext --module ESNext --outDir dist/es",
    "build:cjs": "tsc -p tsconfig.json --target ES5 --module CommonJS --outDir dist/",
    "build": "NODE_ENV=production yarn build:es && yarn build:cjs && node -r esm scripts/copy-files.js",
    "build:docs": "node -r esm ./scripts/build-docs.js",
    "release": "yarn build && yarn publish dist --new-version $npm_package_version --tag latest --access public && git push --tags origin HEAD",
    "test:example": "jest ./scripts/example.test.js",
    "watch:test": "yarn test --watch",
    "test": "yarn jest src/ scripts/",
    "jest": "NODE_ENV=test jest",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "storybook": "start-storybook -p 6006",
    "security-check": "yarn audit"
  },
  "devDependencies": {
    "@storybook/addon-actions": "5.2.8",
    "@storybook/addon-links": "5.2.8",
    "@storybook/react": "5.2.8",
    "@testing-library/react": "9.3.2",
    "@types/enzyme": "3.10.4",
    "@types/jest": "24.0.23",
    "@types/json2mq": "0.2.0",
    "@types/match-sorter": "2.3.0",
    "@types/react": "16.9.16",
    "@types/react-dom": "16.9.4",
    "@types/react-motion": "0.0.29",
    "@types/react-test-renderer": "16.9.1",
    "@types/storybook__react": "4.0.2",
    "@typescript-eslint/eslint-plugin": "2.10.0",
    "@typescript-eslint/parser": "2.10.0",
    "awesome-typescript-loader": "5.2.1",
    "babel-loader": "8.0.6",
    "cross-env": "6.0.3",
    "cross-fetch": "3.0.4",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.15.1",
    "enzyme-to-json": "3.4.3",
    "eslint": "6.7.2",
    "eslint-config-postcss": "3.0.7",
    "eslint-config-prettier": "6.7.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-es5": "1.4.1",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-jest": "23.1.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-react": "7.17.0",
    "eslint-plugin-react-hooks": "2.3.0",
    "eslint-plugin-standard": "4.0.1",
    "esm": "3.2.25",
    "fs-extra": "8.1.0",
    "glob": "7.1.6",
    "html-entities": "1.2.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-fetch-mock": "2.1.2",
    "jest-glamor-react": "4.3.1",
    "lint-staged": "9.5.0",
    "markdown-extract": "1.0.2",
    "path": "0.12.7",
    "prettier": "1.19.1",
    "pretty-quick": "2.0.1",
    "react": "16.12.0",
    "react-docgen": "4.1.1",
    "react-docgen-typescript": "1.16.1",
    "react-dom": "16.12.0",
    "react-test-renderer": "16.12.0",
    "rimraf": "3.0.0",
    "snapshot-diff": "0.6.1",
    "ts-jest": "24.2.0",
    "tslint": "5.20.1",
    "typescript": "3.7.3"
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all",
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged && git add doc"
    }
  },
  "lint-staged": {
    "*": "yarn build:docs"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "snapshotResolver": "<rootDir>/snapshotResolver.js",
    "globals": {
      "ts-jest": {
        "diagnostics": {
          "warnOnly": true
        }
      }
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "bail": true,
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/bootstrap-jest.ts"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-glamor-react"
    ]
  }
}
