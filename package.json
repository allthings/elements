{
  "name": "@allthings/elements-build",
  "version": "1.14.0",
  "main": "src/index.js",
  "repository": "https://github.com/allthings/elements",
  "author": "Moritz Schw√∂rer <moritz.schwoerer@allthings.me>",
  "license": "MIT",
  "dependencies": {
    "@allthings/colors": "3.2.0",
    "babel-runtime": "6.26.0",
    "glamor": "2.20.40",
    "kewler": "1.0.8",
    "mitt": "1.1.2",
    "neue": "1.0.0",
    "prop-types": "15.6.0",
    "react-broadcast": "0.6.1",
    "react-media": "1.6.1",
    "react-motion": "0.5.2"
  },
  "peerDependencies": {
    "react": ">=0.14.0 <17.0.0",
    "react-dom": ">=0.14.0 <17.0.0"
  },
  "scripts": {
    "create:release": "yarn lint && yarn test && yarn version && git push --tags origin HEAD && yarn build && cd build && yarn publish",
    "prebuild": "rimraf build",
    "build": "NODE_ENV=production babel ./src --ignore *.spec.js --out-dir ./build && yarn build:copy-files",
    "build:copy-files": "babel-node ./scripts/copy-files.js",
    "build:docs": "babel-node ./scripts/generate-docs.js",
    "prepublishOnly": "echo 'To publish this, go to build/ and run 'yarn publish''",
    "test": "NODE_ENV=development jest src/",
    "prettier": "prettier --no-semi --single-quote --trailing-comma es5 --write",
    "lint": "eslint --cache --ext .js,.jsx src/ documentation/src/",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.2.16",
    "@storybook/addon-links": "^3.2.16",
    "@storybook/react": "^3.2.16",
    "babel-cli": "6.26.0",
    "babel-core": "6.26.0",
    "babel-eslint": "8.0.3",
    "babel-plugin-add-react-displayname": "0.0.4",
    "babel-plugin-react-docgen": "1.8.1",
    "babel-plugin-transform-class-properties": "6.24.1",
    "babel-plugin-transform-do-expressions": "6.22.0",
    "babel-plugin-transform-export-extensions": "6.22.0",
    "babel-plugin-transform-function-bind": "6.22.0",
    "babel-plugin-transform-object-rest-spread": "6.26.0",
    "babel-plugin-transform-react-jsx-source": "6.22.0",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-react": "6.24.1",
    "cross-env": "5.1.1",
    "enzyme": "3.2.0",
    "enzyme-adapter-react-16": "1.1.1",
    "enzyme-to-json": "3.3.0",
    "eslint": "4.14.0",
    "eslint-config-logux": "17.0.0",
    "eslint-config-postcss": "2.0.2",
    "eslint-config-prettier": "2.7.0",
    "eslint-config-standard": "10.2.1",
    "eslint-plugin-es5": "1.1.0",
    "eslint-plugin-import": "2.8.0",
    "eslint-plugin-jest": "21.5.0",
    "eslint-plugin-node": "5.2.1",
    "eslint-plugin-promise": "3.6.0",
    "eslint-plugin-react": "7.5.1",
    "eslint-plugin-standard": "3.0.1",
    "fs-extra": "5.0.0",
    "glob": "^7.1.2",
    "html-entities": "1.2.1",
    "jest": "22.0.3",
    "jest-fetch-mock": "1.4.0",
    "jest-glamor-react": "3.3.0",
    "markdown-extract": "^1.0.2",
    "path": "0.12.7",
    "prettier": "1.9.2",
    "react": ">=0.14.0 <17.0.0",
    "react-docgen": "^2.20.0",
    "react-dom": ">=0.14.0 <17.0.0",
    "react-test-renderer": ">=0.14.0 <17.0.0",
    "rimraf": "2.6.2"
  },
  "prettier": {
    "eslintIntegration": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "useTabs": false,
    "jsonEnable": []
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "setupTestFrameworkScriptFile": "<rootDir>/bootstrap-jest.js",
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-glamor-react"
    ]
  }
}
