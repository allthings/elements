{
  "name": "@allthings/elements",
  "version": "5.0.0-beta.2",
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "sideEffects": false,
  "repository": "https://github.com/allthings/elements",
  "author": "Moritz Schw√∂rer <moritz.schwoerer@allthings.me>",
  "license": "MIT",
  "dependencies": {
    "@allthings/colors": "3.2.0",
    "downshift": "3.2.2",
    "glamor": "2.20.40",
    "kewler": "1.0.8",
    "match-sorter": "2.3.0",
    "mitt": "1.1.3",
    "neue": "1.0.0",
    "prop-types": "15.6.2",
    "react-broadcast": "0.7.1",
    "react-calendar": "2.18.1",
    "react-media": "1.9.2",
    "react-motion": "0.5.2"
  },
  "resolutions": {
    "terser": "3.14"
  },
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3",
    "react-intl": "^2.4.0"
  },
  "scripts": {
    "create:release": "echo \"This command was removed. Please use yarn version instead.\"",
    "preversion": "yarn lint && yarn test",
    "postversion": "git push --tags origin HEAD && yarn build && yarn publish build",
    "prebuild": "rimraf build",
    "build": "rollup -c rollup.config.js",
    "postbuild": "cp README.md package.json build",
    "missing-exports": "node -r esm ./scripts/missing-exports.js",
    "build:docs": "node -r esm ./scripts/generate-docs.js",
    "test:example": "jest ./scripts/example.test.js",
    "watch:test": "yarn test --watch",
    "test": "jest src/ scripts/",
    "prettier": "prettier --no-semi --single-quote --trailing-comma es5 --write",
    "lint": "eslint --cache --ext .js,.jsx src",
    "storybook": "start-storybook -p 6006"
  },
  "ignoredMissingImports": [
    "src/index.js",
    "// exported separately with rollup to avoid importing 3rd party packages",
    "src/behaviour/CDNIntlProvider.jsx",
    "src/molecules/Calendar.jsx",
    "// only internally used stuff",
    "src/behaviour/Message.js",
    "src/utils/math.js",
    "src/propTypes/color.js",
    "src/utils/escapeRegex.js",
    "src/utils/CountryList.js",
    "src/utils/insertCSS.js"
  ],
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@storybook/addon-actions": "4.1.11",
    "@storybook/addon-links": "4.1.11",
    "@storybook/react": "4.1.11",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-react-docgen": "2.0.2",
    "cross-env": "5.2.0",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.9.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.13.0",
    "eslint-config-postcss": "3.0.7",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-es5": "1.3.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.2.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-standard": "4.0.0",
    "esm": "3.2.4",
    "glob": "7.1.3",
    "html-entities": "1.2.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-fetch-mock": "2.1.0",
    "jest-glamor-react": "4.3.1",
    "markdown-extract": "1.0.2",
    "path": "0.12.7",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "react": "16.8.1",
    "react-docgen": "3.0.0",
    "react-dom": "16.8.1",
    "react-generate-props": "0.5.0",
    "react-intl": "2.8.0",
    "react-test-renderer": "16.8.1",
    "react-testing-library": "5.6.0",
    "rimraf": "2.6.3",
    "rollup": "1.1.2",
    "rollup-plugin-babel": "4.3.2",
    "rollup-plugin-includepaths": "0.2.3",
    "snapshot-diff": "0.5.0"
  },
  "prettier": {
    "eslintIntegration": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "useTabs": false,
    "jsonEnable": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn build:docs && git add doc  "
    }
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/bootstrap-jest.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-glamor-react"
    ]
  }
}
