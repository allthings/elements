{
  "name": "@allthings/elements-build",
  "version": "4.2.1",
  "main": "src/index.js",
  "repository": "https://github.com/allthings/elements",
  "author": "Moritz Schw√∂rer <moritz.schwoerer@allthings.me>",
  "license": "MIT",
  "dependencies": {
    "@allthings/colors": "3.2.0",
    "downshift": "3.2.2",
    "glamor": "2.20.40",
    "kewler": "1.0.8",
    "match-sorter": "2.3.0",
    "mitt": "1.1.3",
    "neue": "1.0.0",
    "prop-types": "15.7.1",
    "react-calendar": "2.18.1",
    "react-media": "1.9.2",
    "react-motion": "0.5.2"
  },
  "resolutions": {
    "terser": "3.14"
  },
  "peerDependencies": {
    "react": "^16.3",
    "react-dom": "^16.3",
    "react-intl": "^2.4.0"
  },
  "scripts": {
    "create:release": "yarn lint && yarn test && yarn version && git push --tags origin HEAD && yarn build && yarn publish build",
    "prebuild": "rimraf build",
    "babel": "babel ./src --ignore *.spec.js --out-dir ./build",
    "babel:watch": "yarn babel --watch",
    "build": "NODE_ENV=production yarn babel && yarn build:copy-files",
    "build:copy-files": "node -r esm ./scripts/copy-files.js",
    "build:docs": "node -r esm ./scripts/generate-docs.js",
    "test:example": "jest ./scripts/example.test.js",
    "prepublishOnly": "echo 'To publish this, go to build/ and run 'yarn publish''",
    "watch:test": "yarn test --watch",
    "test": "yarn jest src/ scripts/",
    "jest": "NODE_ENV=test jest",
    "prettier": "prettier --no-semi --single-quote --trailing-comma es5 --write",
    "lint": "eslint --cache --ext .js,.jsx src",
    "storybook": "start-storybook -p 6006"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/plugin-proposal-export-default-from": "7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "7.3.2",
    "@babel/plugin-syntax-dynamic-import": "7.2.0",
    "@babel/plugin-transform-react-jsx-source": "7.2.0",
    "@babel/plugin-transform-runtime": "7.2.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-react": "7.0.0",
    "@babel/runtime": "7.3.1",
    "@storybook/addon-actions": "4.1.11",
    "@storybook/addon-links": "4.1.11",
    "@storybook/react": "4.1.11",
    "babel-eslint": "10.0.1",
    "babel-jest": "24.1.0",
    "babel-loader": "8.0.5",
    "babel-plugin-add-react-displayname": "0.0.5",
    "babel-plugin-react-docgen": "2.0.2",
    "cross-env": "5.2.0",
    "cross-fetch": "3.0.1",
    "enzyme": "3.8.0",
    "enzyme-adapter-react-16": "1.9.1",
    "enzyme-to-json": "3.3.5",
    "eslint": "5.13.0",
    "eslint-config-postcss": "3.0.7",
    "eslint-config-prettier": "4.0.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-es5": "1.3.1",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-jest": "22.2.2",
    "eslint-plugin-node": "8.0.1",
    "eslint-plugin-promise": "4.0.1",
    "eslint-plugin-react": "7.12.4",
    "eslint-plugin-standard": "4.0.0",
    "esm": "3.2.4",
    "fs-extra": "7.0.1",
    "glob": "7.1.3",
    "html-entities": "1.2.1",
    "husky": "1.3.1",
    "jest": "24.1.0",
    "jest-fetch-mock": "2.1.0",
    "jest-glamor-react": "4.3.1",
    "markdown-extract": "1.0.2",
    "path": "0.12.7",
    "prettier": "1.16.4",
    "pretty-quick": "1.10.0",
    "react": "16.8.1",
    "react-docgen": "3.0.0",
    "react-dom": "16.8.1",
    "react-generate-props": "0.5.0",
    "react-intl": "2.8.0",
    "react-test-renderer": "16.8.1",
    "react-testing-library": "5.8.0",
    "rimraf": "2.6.3",
    "snapshot-diff": "0.5.0"
  },
  "prettier": {
    "eslintIntegration": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "semi": false,
    "useTabs": false,
    "jsonEnable": []
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged && yarn build:docs && git add doc  "
    }
  },
  "jest": {
    "bail": true,
    "collectCoverage": true,
    "setupFilesAfterEnv": [
      "<rootDir>/bootstrap-jest.js"
    ],
    "snapshotSerializers": [
      "enzyme-to-json/serializer",
      "jest-glamor-react"
    ]
  }
}
