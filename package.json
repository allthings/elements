  "license": "MIT",
  "dependencies": {
    "@allthings/colors": "3.2.0",
    "downshift": "2.1.1",
    "glamor": "2.20.40",
    "kewler": "1.0.8",
    "match-sorter": "2.2.3",
    "mitt": "1.1.3",
    "neue": "1.0.0",
    "prop-types": "15.6.2",
    "react-broadcast": "0.7.1",
